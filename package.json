{
  "name": "eurotcg-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --ignore-path .gitignore --fix",
    "lint:ci": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --ignore-path .gitignore --max-warnings 20",
    "format": "prettier --write . --config config/.prettierrc --ignore-path config/.prettierignore",
    "format:check": "prettier --check . --config config/.prettierrc --ignore-path config/.prettierignore",
    "type-check": "astro check",
    "clean": "rimraf dist .astro node_modules/.astro node_modules/.vite",
    "lighthouse": "lhci autorun --config=config/.lighthouserc.json",
    "docker:build": "docker build -f docker/Dockerfile -t eurotcg-website .",
    "docker:run": "docker run -p 3000:3000 eurotcg-website",
    "docker:compose": "docker-compose -f docker/docker-compose.yml up",
    "docker:staging": "docker-compose -f docker/docker-compose.staging.yml up",
    "deploy": "npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.0.0",
    "@astrojs/sitemap": "^3.2.0",
    "@astrojs/tailwind": "^6.0.0",
    "@fontsource-variable/inter": "^5.1.0",
    "astro": "^5.15.4",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@lhci/cli": "^0.14.0",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.0.0"
  }
}

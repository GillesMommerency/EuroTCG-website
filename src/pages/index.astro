---
import LanguageSwitcher from '@/components/react/LanguageSwitcher';
import NewsletterForm from '@/components/react/NewsletterForm';
import ProgressBar from '@/components/react/ProgressBar';
import TCGCard3D from '@/components/react/TCGCard3D';
import ThemeToggle from '@/components/react/ThemeToggle';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocaleFromUrl, getLocalizedPath } from '@/lib/i18n';
import de from '@/locales/de';
import en from '@/locales/en';
import es from '@/locales/es';
import fr from '@/locales/fr';
import it from '@/locales/it';
import nl from '@/locales/nl';

const locale = getLocaleFromUrl(Astro.url) || 'en';

// Generate language URLs for the language switcher
const languageUrls = {
  en: getLocalizedPath('/', 'en'),
  fr: getLocalizedPath('/', 'fr'),
  de: getLocalizedPath('/', 'de'),
  es: getLocalizedPath('/', 'es'),
  it: getLocalizedPath('/', 'it'),
  nl: getLocalizedPath('/', 'nl'),
};

// Get the correct translations based on locale
const translations = {
  en,
  fr,
  de,
  es,
  it,
  nl,
};

const t = translations[locale as keyof typeof translations] || en;

// SEO-optimized keywords for TCG market
const keywords = [
  'trading card game platform',
  'TCG collection manager',
  'European card marketplace',
  'digital card trading',
  'TCG price tracker',
  'card inventory system',
  'collectible card database',
  'TCG community platform',
  'card trading app',
  'European TCG market',
];

const coreFeatures = [
  {
    icon: 'ðŸ“·',
    title: t.underConstruction.features.scanning.title,
    description: t.underConstruction.features.scanning.description,
    benefits: (t.underConstruction.features.scanning as any).benefits || [
      'Advanced scanning',
      'High accuracy',
      'Offline support',
    ],
    gradient: 'bg-holo-primary',
  },
  {
    icon: 'ðŸ’°',
    title: (t.underConstruction.features as any).priceComparison?.title || 'Price Comparison',
    description:
      (t.underConstruction.features as any).priceComparison?.description ||
      'Compare prices across European markets',
    benefits: (t.underConstruction.features as any).priceComparison?.benefits || [
      'Real-time data',
      'Multiple markets',
      'Price alerts',
    ],
    gradient: 'bg-holo-accent',
  },
  {
    icon: 'ðŸ“š',
    title: t.underConstruction.features.collection.title,
    description: t.underConstruction.features.collection.description,
    benefits: (t.underConstruction.features.collection as any).benefits || [
      'Smart organization',
      'Value tracking',
      'Analytics',
    ],
    gradient: 'bg-holo-secondary',
  },
  {
    icon: 'ðŸ†',
    title: (t.underConstruction.features as any).preGrading?.title || 'Pre-Grading',
    description:
      (t.underConstruction.features as any).preGrading?.description ||
      'AI-powered condition assessment',
    benefits: (t.underConstruction.features as any).preGrading?.benefits || [
      'Condition analysis',
      'Grade predictions',
      'ROI calculator',
    ],
    gradient: 'bg-holo-tertiary',
  },
  {
    icon: 'ðŸ””',
    title: (t.underConstruction.features as any).alerts?.title || 'Alerts & Notifications',
    description:
      (t.underConstruction.features as any).alerts?.description || 'Stay updated with new releases',
    benefits: (t.underConstruction.features as any).alerts?.benefits || [
      'Release alerts',
      'Price notifications',
      'Custom watchlists',
    ],
    gradient: 'bg-holo-warning',
  },
  {
    icon: 'ðŸŒ',
    title: t.underConstruction.features.multilingual.title,
    description: t.underConstruction.features.multilingual.description,
    benefits: (t.underConstruction.features.multilingual as any).benefits || [
      '6 languages',
      'Local support',
      'Cultural adaptation',
    ],
    gradient: 'bg-holo-rainbow',
  },
];

const progressItems = [
  {
    name: (t.underConstruction.progress as any).coreEngine || 'Core Engine',
    progress: 85,
    color: 'bg-blue-500',
  },
  {
    name: (t.underConstruction.progress as any).priceApi || 'Price API',
    progress: 60,
    color: 'bg-green-500',
  },
  {
    name: (t.underConstruction.progress as any).mobileApp || 'Mobile App',
    progress: 40,
    color: 'bg-purple-500',
  },
  {
    name: (t.underConstruction.progress as any).betaTesting || 'Beta Testing',
    progress: 25,
    color: 'bg-orange-500',
  },
  { name: t.underConstruction.progress.launch, progress: 10, color: 'bg-red-500' },
];

// Enhanced structured data for better SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: t.underConstruction.title,
  description: t.underConstruction.description,
  mainEntity: {
    '@type': 'SoftwareApplication',
    name: 'EuroTCG',
    applicationCategory: 'CollectionApplication',
    applicationSubCategory: 'Trading Card Game Management',
    operatingSystem: ['iOS', 'Android', 'Web'],
    description: t.underConstruction.description,
    offers: {
      '@type': 'Offer',
      price: '0',
      priceCurrency: 'EUR',
      availability: 'InStock',
    },
    author: {
      '@type': 'Organization',
      name: 'EuroTCG Team',
    },
    featureList: coreFeatures.map(f => f.title),
    audience: {
      '@type': 'Audience',
      audienceType: 'TCG Collectors and Traders',
    },
  },
};
---

<BaseLayout
  title={t.underConstruction.title}
  description={t.underConstruction.description}
  locale={locale}
  structuredData={structuredData}
  keywords={keywords}
>
  <!-- Professional Navigation Header -->
  <header
    class="border-border bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 border-b backdrop-blur"
  >
    <div class="container mx-auto px-4">
      <div class="flex h-16 items-center justify-between">
        <!-- Logo Section -->
        <div class="flex items-center space-x-4">
          <div
            class="from-primary to-primary/80 text-primary-foreground flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br text-xl font-bold shadow-lg"
          >
            E
          </div>
          <div class="flex flex-col">
            <span class="text-foreground text-xl font-bold">EuroTCG</span>
            <span class="text-muted-foreground text-xs">European Trading Platform</span>
          </div>
        </div>

        <!-- Navigation Items (for future use) -->
        <nav class="hidden items-center space-x-6 md:flex">
          <a
            href="#features"
            class="text-muted-foreground hover:text-foreground text-sm font-medium transition-colors"
            >Features</a
          >
          <a
            href="#progress"
            class="text-muted-foreground hover:text-foreground text-sm font-medium transition-colors"
            >Progress</a
          >
          <a
            href="#community"
            class="text-muted-foreground hover:text-foreground text-sm font-medium transition-colors"
            >Community</a
          >
        </nav>

        <!-- Controls -->
        <div class="flex items-center gap-3">
          <LanguageSwitcher client:load currentLocale={locale} languageUrls={languageUrls} />
          <ThemeToggle client:load />
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="relative">
    <!-- Hero Section with EuroTCG Neoâ€‘Holo design -->
    <section class="neo-holo-bg relative overflow-hidden">
      <!-- Holographic Background Elements -->
      <div class="absolute inset-0">
        <div
          class="animate-card-float absolute left-1/4 top-1/4 h-72 w-72 rounded-full opacity-30"
          style="background: linear-gradient(135deg, hsl(var(--holo-primary)) 0%, hsl(var(--holo-secondary)) 100%); filter: blur(60px);"
        >
        </div>
        <div
          class="animate-card-float absolute bottom-1/4 right-1/4 h-96 w-96 rounded-full opacity-20"
          style="background: linear-gradient(135deg, hsl(var(--holo-accent)) 0%, hsl(var(--holo-tertiary)) 100%); filter: blur(80px); animation-delay: -1.5s;"
        >
        </div>
        <div
          class="absolute left-1/2 top-1/2 h-[600px] w-[600px] -translate-x-1/2 -translate-y-1/2 transform rounded-full opacity-10"
          style="background: linear-gradient(135deg, hsl(var(--holo-primary)) 0%, hsl(var(--holo-secondary)) 25%, hsl(var(--holo-tertiary)) 50%, hsl(var(--holo-accent)) 75%, hsl(var(--holo-primary)) 100%); filter: blur(100px);"
        >
        </div>
      </div>

      <!-- Floating 3D TCG Cards -->
      <div class="tcg-cards-container absolute inset-0 hidden lg:block" style="z-index: 1;">
        <!-- Top Left Corner - Charizard -->
        <div class="absolute" style="left: 3vw; top: 15vh;">
          <TCGCard3D
            client:load
            game="pokemon"
            cardName="Charizard"
            imageUrl="/images/cards/pokemon/charizard.png"
            rarity="rare"
            opacity={0.55}
            scale={1.4}
            rotation={12}
            animationDelay={400}
            enableFadeIn={true}
            enable3D={true}
          />
        </div>

        <!-- Top Right - Luffy (GOOD POSITION) -->
        <div class="absolute" style="right: 3vw; top: 25vh;">
          <TCGCard3D
            client:load
            game="onepiece"
            cardName="Monkey D. Luffy"
            imageUrl="/images/cards/onepiece/luffy.png"
            rarity="rare"
            opacity={0.55}
            scale={1.3}
            rotation={-24}
            animationDelay={800}
            enableFadeIn={true}
            enable3D={true}
          />
        </div>

        <!-- Bottom Left - Elsa -->
        <div class="absolute" style="left: 8vw; bottom: 20vh;">
          <TCGCard3D
            client:load
            game="lorcana"
            cardName="Elsa"
            imageUrl="/images/cards/lorcana/elsa.png"
            rarity="rare"
            opacity={0.5}
            scale={1.15}
            rotation={-12}
            animationDelay={1200}
            enableFadeIn={true}
            enable3D={true}
          />
        </div>

        <!-- Bottom Right - Magic -->
        <div class="absolute" style="right: 8vw; bottom: 12vh;">
          <TCGCard3D
            client:load
            game="magic"
            cardName="The One Ring"
            imageUrl="/images/cards/magic/the-one-ring.png"
            rarity="rare"
            opacity={0.45}
            scale={1.2}
            rotation={12}
            animationDelay={1600}
            enableFadeIn={true}
            enable3D={true}
          />
        </div>
      </div>

      <div class="container relative mx-auto px-4 py-20 lg:py-32">
        <div class="mx-auto max-w-5xl text-center">
          <!-- Status Badge with holographic effect -->
          <div
            class="glass-holo mb-8 inline-flex items-center gap-2 rounded-full border px-6 py-3 text-sm font-medium"
          >
            <div
              class="relative h-2 w-2 rounded-full"
              style="background: hsl(var(--holo-primary));"
            >
              <div
                class="absolute inset-0 animate-ping rounded-full"
                style="background: hsl(var(--holo-primary));"
              >
              </div>
            </div>
            {t.underConstruction.comingSoon}
          </div>

          <!-- Main Heading with holographic text -->
          <h1 class="mb-6 text-5xl font-bold tracking-tight sm:text-6xl lg:text-8xl">
            <span class="neo-holo-text animate-holo-shift block">
              {t.underConstruction.heading}
            </span>
          </h1>

          <!-- Value Proposition -->
          <p
            class="text-muted-foreground mx-auto mb-8 max-w-4xl text-xl leading-relaxed sm:text-2xl"
          >
            {t.underConstruction.subheading}
          </p>

          <!-- Expanded Description -->
          <p class="text-muted-foreground/80 mx-auto mb-12 max-w-3xl text-lg leading-relaxed">
            {t.underConstruction.description}
          </p>

          <!-- Key Selling Points -->
          <div class="mx-auto mb-12 grid max-w-5xl grid-cols-1 gap-6 md:grid-cols-4">
            <div class="neo-holo-card p-6 text-center">
              <div
                class="scan-beam mx-auto mb-3 flex h-12 w-12 items-center justify-center text-2xl"
              >
                ðŸ“·
              </div>
              <p class="text-foreground text-sm font-semibold">AI Card Scanner</p>
              <p class="text-muted-foreground text-xs">99% Accuracy</p>
            </div>
            <div class="neo-holo-card p-6 text-center">
              <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center text-2xl">ðŸ’°</div>
              <p class="text-foreground text-sm font-semibold">EU Price Tracking</p>
              <p class="text-muted-foreground text-xs">Live Cardmarket Data</p>
            </div>
            <div class="neo-holo-card p-6 text-center">
              <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center text-2xl">ðŸ“±</div>
              <p class="text-foreground text-sm font-semibold">Mobile-First</p>
              <p class="text-muted-foreground text-xs">iOS & Android Apps</p>
            </div>
            <div class="neo-holo-card p-6 text-center">
              <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center text-2xl">ðŸ””</div>
              <p class="text-foreground text-sm font-semibold">Drop Alerts</p>
              <p class="text-muted-foreground text-xs">Never Miss Releases</p>
            </div>
          </div>

          <!-- Newsletter Signup -->
          <div class="mb-8">
            <NewsletterForm client:load locale={locale} />
          </div>

          <!-- Early Access Info -->
          <p class="text-muted-foreground text-sm">
            Join <span class="text-primary font-semibold">500+</span> collectors already waiting for
            early access
          </p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="neo-holo-bg py-20 lg:py-32">
      <div class="container mx-auto px-4">
        <div class="mb-16 text-center">
          <h2 class="text-foreground mb-4 text-3xl font-bold sm:text-4xl">
            {t.underConstruction.features.title}
          </h2>
          <p class="text-muted-foreground mx-auto max-w-3xl text-lg">
            Revolutionary tools designed for European collectors - from AI-powered scanning to
            real-time EU market intelligence
          </p>
        </div>

        <div class="mx-auto grid max-w-7xl gap-8 lg:grid-cols-2 xl:grid-cols-3">
          {
            coreFeatures.map((feature: any) => (
              <article class="neo-holo-card group relative p-8">
                <div class="mb-6 flex items-center gap-4">
                  <div
                    class="flex h-16 w-16 items-center justify-center rounded-2xl text-3xl"
                    style={`background: linear-gradient(135deg, hsl(var(--holo-primary)) 0%, hsl(var(--holo-secondary)) 100%); box-shadow: 0 8px 32px hsla(var(--holo-primary), 0.2);`}
                  >
                    {feature.icon}
                  </div>
                  <div
                    class="h-px flex-1 opacity-30"
                    style={`background: linear-gradient(90deg, hsl(var(--holo-primary)) 0%, transparent 100%);`}
                  />
                </div>

                <h3 class="text-card-foreground group-hover:neo-holo-text mb-3 text-xl font-semibold transition-all duration-300">
                  {feature.title}
                </h3>
                <p class="text-muted-foreground mb-6 leading-relaxed">{feature.description}</p>

                <ul class="space-y-3">
                  {feature.benefits?.map((benefit: string) => (
                    <li class="text-muted-foreground flex items-center text-sm">
                      <div
                        class="mr-3 flex h-5 w-5 items-center justify-center rounded-full"
                        style={`background: linear-gradient(135deg, hsl(var(--holo-success)) 0%, hsl(var(--holo-accent)) 100%);`}
                      >
                        <svg class="h-3 w-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                      {benefit}
                    </li>
                  ))}
                </ul>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Progress Section -->
    <section id="progress" class="py-20 lg:py-32">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-4xl">
          <div class="mb-16 text-center">
            <h2 class="text-foreground mb-4 text-3xl font-bold sm:text-4xl">
              Development Progress
            </h2>
            <p class="text-muted-foreground text-lg">
              Track our journey as we build the future of European TCG trading
            </p>
          </div>

          <div class="space-y-8">
            {
              progressItems.map((item, index) => (
                <div class="relative">
                  <div class="mb-3 flex items-center justify-between">
                    <h3 class="text-foreground font-semibold">{item.name}</h3>
                    <span class="text-muted-foreground text-sm font-medium">{item.progress}%</span>
                  </div>
                  <ProgressBar
                    client:load
                    label={item.name}
                    progress={item.progress}
                    delay={200 + index * 100}
                    className="h-3"
                  />
                </div>
              ))
            }
          </div>

          <div class="mt-12 text-center">
            <p class="mb-4 text-sm font-medium" style="color: hsl(var(--holo-primary));">
              {t.underConstruction.estimatedLaunch}
            </p>
            <div class="flex justify-center">
              <div
                class="h-1 w-64 rounded-full"
                style="background: linear-gradient(90deg, hsl(var(--holo-primary)) 0%, hsl(var(--holo-secondary)) 25%, hsl(var(--holo-tertiary)) 50%, hsl(var(--holo-accent)) 75%, hsl(var(--holo-primary)) 100%);"
              >
              </div>
            </div>
            <div class="mt-8">
              <a
                href="#newsletter"
                class="neo-holo-card inline-flex items-center px-8 py-4 text-sm font-semibold transition-all duration-300 hover:scale-105"
                style="background: linear-gradient(135deg, hsl(var(--holo-primary)) 0%, hsl(var(--holo-secondary)) 100%); color: white; text-decoration: none;"
              >
                Join Beta Program
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Section -->
    <section id="community" class="bg-muted/20 py-20 lg:py-32">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-foreground mb-4 text-3xl font-bold sm:text-4xl">Join the Community</h2>
        <p class="text-muted-foreground mx-auto mb-12 max-w-2xl text-lg">
          Connect with fellow collectors, stay updated on development, and be first to access new
          features
        </p>

        <div class="mx-auto mb-12 grid max-w-4xl grid-cols-1 gap-6 md:grid-cols-3">
          <a
            href="https://discord.gg/eurotcg"
            class="border-border bg-card hover:bg-accent/5 group flex flex-col items-center rounded-2xl border p-8 transition-all duration-300 hover:-translate-y-1"
            aria-label="Join our Discord community"
          >
            <div
              class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-[#5865F2] transition-transform group-hover:scale-110"
            >
              <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"
                ></path>
              </svg>
            </div>
            <h3 class="text-foreground mb-2 font-semibold">Discord</h3>
            <p class="text-muted-foreground text-sm">Real-time chat & updates</p>
          </a>

          <a
            href="https://twitter.com/eurotcg"
            class="border-border bg-card hover:bg-accent/5 group flex flex-col items-center rounded-2xl border p-8 transition-all duration-300 hover:-translate-y-1"
            aria-label="Follow us on Twitter"
          >
            <div
              class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-[#1DA1F2] transition-transform group-hover:scale-110"
            >
              <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                ></path>
              </svg>
            </div>
            <h3 class="text-foreground mb-2 font-semibold">Twitter</h3>
            <p class="text-muted-foreground text-sm">Latest news & announcements</p>
          </a>

          <a
            href="https://github.com/eurotcg"
            class="border-border bg-card hover:bg-accent/5 group flex flex-col items-center rounded-2xl border p-8 transition-all duration-300 hover:-translate-y-1"
            aria-label="Follow us on GitHub"
          >
            <div
              class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-[#333] transition-transform group-hover:scale-110"
            >
              <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"

            </svg>
            Discord
          </a>
        </div>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section class="relative px-6 py-16 lg:px-8 bg-muted/50">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="text-3xl font-bold text-foreground mb-4">
          {t.underConstruction.contact.title}
        </h2>
        <p class="text-lg text-muted-foreground mb-8">
          {t.underConstruction.contact.description}
        </p>
        
        <a 
          href={`mailto:${t.underConstruction.contact.email}`}
          class="btn btn-primary btn-lg"
        >
          {t.underConstruction.contact.email}
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* Custom animations for the under construction page */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes fadeUp {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
  
  .animate-fade-up {
    opacity: 0;
    animation: fadeUp 0.8s ease-out forwards;
  }
  
  /* Ensure animations respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-fade-up {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
  
  /* Enhanced visual effects for construction theme */
  .construction-pattern {
    position: relative;
  }
  
  .construction-pattern::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      45deg,
      hsl(var(--primary)) 0,
      hsl(var(--primary)) 2px,
      transparent 2px,
      transparent 10px
    );
    animation: shimmer 2s linear infinite;
  }
  
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
</style>
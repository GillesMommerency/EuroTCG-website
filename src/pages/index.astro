---
import BaseLayout from '@/layouts/BaseLayout.astro';
import NewsletterForm from '@/components/react/NewsletterForm';
import ThemeToggle from '@/components/react/ThemeToggle';
import LanguageSwitcher from '@/components/react/LanguageSwitcher';
import ProgressBar from '@/components/react/ProgressBar';
import { getLocaleFromUrl } from '@/lib/i18n';
import en from '@/locales/en';
import fr from '@/locales/fr';

const locale = getLocaleFromUrl(Astro.url);
const t = locale === 'fr' ? fr : en; // Simple fallback for now

const features = [
  {
    icon: 'üì±',
    title: t.underConstruction.features.scanning.title,
    description: t.underConstruction.features.scanning.description,
  },
  {
    icon: 'üìö',
    title: t.underConstruction.features.collection.title,
    description: t.underConstruction.features.collection.description,
  },
  {
    icon: 'üåç',
    title: t.underConstruction.features.marketplace.title,
    description: t.underConstruction.features.marketplace.description,
  },
  {
    icon: 'üì≤',
    title: t.underConstruction.features.mobile.title,
    description: t.underConstruction.features.mobile.description,
  },
  {
    icon: 'üîí',
    title: t.underConstruction.features.privacy.title,
    description: t.underConstruction.features.privacy.description,
  },
  {
    icon: 'üó£Ô∏è',
    title: t.underConstruction.features.multilingual.title,
    description: t.underConstruction.features.multilingual.description,
  },
];

const progressItems = [
  { name: t.underConstruction.progress.design, progress: 85 },
  { name: t.underConstruction.progress.backend, progress: 60 },
  { name: t.underConstruction.progress.mobile, progress: 40 },
  { name: t.underConstruction.progress.testing, progress: 25 },
  { name: t.underConstruction.progress.launch, progress: 10 },
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": t.underConstruction.title,
  "description": t.underConstruction.description,
  "mainEntity": {
    "@type": "SoftwareApplication",
    "name": "EuroTCG",
    "applicationCategory": "CollectionApplication",
    "operatingSystem": "iOS, Android, Web",
    "description": t.underConstruction.description,
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "EUR"
    },
    "author": {
      "@type": "Organization",
      "name": "EuroTCG Team"
    }
  }
};
---

<BaseLayout
  title={t.underConstruction.title}
  description={t.underConstruction.description}
  locale={locale}
  structuredData={structuredData}
>
  <!-- Navigation Header -->
  <div class="relative z-50 flex h-16 items-center justify-between px-6 lg:px-8">
    <!-- Logo -->
    <div class="flex items-center">
      <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary text-primary-foreground font-bold text-lg">
        E
      </div>
      <span class="ml-2 text-xl font-bold text-foreground">EuroTCG</span>
    </div>
    
    <!-- Controls -->
    <div class="flex items-center gap-4">
      <LanguageSwitcher client:load currentLocale={locale} />
      <ThemeToggle client:load />
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative min-h-screen overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 construction-grid opacity-5"></div>
    
    <!-- Hero Section -->
    <section class="relative px-6 py-16 lg:px-8 lg:py-24">
      <div class="mx-auto max-w-4xl text-center">
        <!-- Construction Badge -->
        <div class="mb-8 inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-sm font-medium text-primary">
          <div class="construction-pattern h-2 w-2 rounded-full"></div>
          {t.underConstruction.comingSoon}
        </div>
        
        <!-- Main Heading -->
        <h1 class="mb-6 text-4xl font-bold tracking-tight text-foreground sm:text-6xl lg:text-7xl">
          <span class="gradient-text animate-fade-in">
            {t.underConstruction.heading}
          </span>
        </h1>
        
        <!-- Subheading -->
        <p class="mb-8 text-xl text-muted-foreground sm:text-2xl animate-fade-up">
          {t.underConstruction.subheading}
        </p>
        
        <!-- Description -->
        <p class="mb-12 text-lg text-muted-foreground max-w-3xl mx-auto animate-fade-up" style="animation-delay: 0.2s;">
          {t.underConstruction.description}
        </p>
        
        <!-- Newsletter Signup -->
        <div class="mb-16 animate-fade-up" style="animation-delay: 0.4s;">
          <NewsletterForm client:load locale={locale} />
        </div>
        
        <!-- Estimated Launch -->
        <div class="text-center animate-fade-up" style="animation-delay: 0.6s;">
          <p class="text-sm font-medium text-primary mb-2">
            {t.underConstruction.estimatedLaunch}
          </p>
          <div class="flex justify-center">
            <div class="h-1 w-32 bg-gradient-to-r from-primary to-primary/50 rounded-full"></div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Features Section -->
    <section class="relative px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-foreground mb-4">
            {t.underConstruction.features.title}
          </h2>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {features.map((feature, index) => (
            <div 
              class="tcg-card p-6 text-center animate-fade-up" 
              style={`animation-delay: ${0.8 + index * 0.1}s;`}
            >
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold text-foreground mb-2">
                {feature.title}
              </h3>
              <p class="text-muted-foreground">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Progress Section -->
    <section class="relative px-6 py-16 lg:px-8 bg-muted/50">
      <div class="mx-auto max-w-4xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-foreground mb-4">
            {t.underConstruction.progress.title}
          </h2>
        </div>
        
        <div class="space-y-6">
          {progressItems.map((item, index) => (
            <div class="animate-fade-up" style={`animation-delay: ${1.4 + index * 0.1}s;`}>
              <ProgressBar
                client:load
                label={item.name}
                progress={item.progress}
                delay={1400 + index * 100}
              />
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Social Section -->
    <section class="relative px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="text-3xl font-bold text-foreground mb-4">
          {t.underConstruction.social.title}
        </h2>
        <p class="text-lg text-muted-foreground mb-8">
          {t.underConstruction.social.description}
        </p>
        
        <div class="flex justify-center gap-6">
          <a 
            href="https://twitter.com/eurotcg" 
            class="btn btn-outline btn-lg flex items-center gap-2 hover:scale-105 transition-transform"
            aria-label="Follow us on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">

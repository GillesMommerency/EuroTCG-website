---
// Dynamic locale routing page - handles all /locale/ URLs
import ARScannerDemo from '@/components/react/ARScannerDemo';
import CardValueTracker from '@/components/react/CardValueTracker';
import CollectionProgressGame from '@/components/react/CollectionProgressGame';
import LanguageSwitcher from '@/components/react/LanguageSwitcher';
import MobileBottomNav from '@/components/react/MobileBottomNav';
import MobileCardCarousel from '@/components/react/MobileCardCarousel';
import NewsletterForm from '@/components/react/NewsletterForm';
import ProgressBar from '@/components/react/ProgressBar';
import TCGCard3D from '@/components/react/TCGCard3D';
import ThemeToggle from '@/components/react/ThemeToggle';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocaleFromUrl, getLocalizedPath, locales, type Locale } from '@/lib/i18n';
import de from '@/locales/de';
import en from '@/locales/en';
import es from '@/locales/es';
import fr from '@/locales/fr';
import it from '@/locales/it';
import nl from '@/locales/nl';

// Get static paths for ALL supported locales including English
export function getStaticPaths() {
  return locales.map(locale => ({
    params: { locale },
  }));
}

const { locale: localeParam } = Astro.params;
const locale = (localeParam as Locale) || getLocaleFromUrl(Astro.url);

// Generate language URLs for the language switcher
const languageUrls = {
  en: getLocalizedPath('/', 'en'),
  fr: getLocalizedPath('/', 'fr'),
  de: getLocalizedPath('/', 'de'),
  es: getLocalizedPath('/', 'es'),
  it: getLocalizedPath('/', 'it'),
  nl: getLocalizedPath('/', 'nl'),
};

// Get the correct translations based on locale
const translations = {
  en,
  fr,
  de,
  es,
  it,
  nl,
};

const t = translations[locale as keyof typeof translations] || en;

// SEO-optimized keywords for TCG market
const keywords = [
  'trading card game platform',
  'TCG collection manager',
  'European card marketplace',
  'digital card trading',
  'TCG price tracker',
  'card inventory system',
  'collectible card database',
  'TCG community platform',
  'card trading app',
  'European TCG market',
];

const coreFeatures = [
  {
    icon: 'üì∑',
    title: t.underConstruction.features.scanning.title,
    description: t.underConstruction.features.scanning.description,
    benefits: (t.underConstruction.features.scanning as any).benefits || [
      'Advanced scanning',
      'High accuracy',
      'Offline support',
    ],
    gradient: 'bg-holo-primary',
  },
  {
    icon: 'üí∞',
    title: (t.underConstruction.features as any).priceComparison?.title || 'Price Comparison',
    description:
      (t.underConstruction.features as any).priceComparison?.description ||
      'Compare prices across European markets',
    benefits: (t.underConstruction.features as any).priceComparison?.benefits || [
      'Real-time data',
      'Multiple markets',
      'Price alerts',
    ],
    gradient: 'bg-holo-accent',
  },
  {
    icon: 'üìö',
    title: t.underConstruction.features.collection.title,
    description: t.underConstruction.features.collection.description,
    benefits: (t.underConstruction.features.collection as any).benefits || [
      'Smart organization',
      'Value tracking',
      'Analytics',
    ],
    gradient: 'bg-holo-secondary',
  },
  {
    icon: 'üèÜ',
    title: (t.underConstruction.features as any).preGrading?.title || 'Pre-Grading',
    description:
      (t.underConstruction.features as any).preGrading?.description ||
      'AI-powered condition assessment',
    benefits: (t.underConstruction.features as any).preGrading?.benefits || [
      'Condition analysis',
      'Grade predictions',
      'ROI calculator',
    ],
    gradient: 'bg-holo-tertiary',
  },
  {
    icon: 'üîî',
    title: (t.underConstruction.features as any).alerts?.title || 'Alerts & Notifications',
    description:
      (t.underConstruction.features as any).alerts?.description || 'Stay updated with new releases',
    benefits: (t.underConstruction.features as any).alerts?.benefits || [
      'Release alerts',
      'Price notifications',
      'Custom watchlists',
    ],
    gradient: 'bg-holo-warning',
  },
  {
    icon: 'üåç',
    title: t.underConstruction.features.multilingual.title,
    description: t.underConstruction.features.multilingual.description,
    benefits: (t.underConstruction.features.multilingual as any).benefits || [
      '6 languages',
      'Local support',
      'Cultural adaptation',
    ],
    gradient: 'bg-holo-rainbow',
  },
];

const progressItems = [
  {
    name: (t.underConstruction.progress as any).coreEngine || 'Core Engine',
    progress: 85,
    color: 'bg-blue-500',
  },
  {
    name: (t.underConstruction.progress as any).priceApi || 'Price API',
    progress: 60,
    color: 'bg-green-500',
  },
  {
    name: (t.underConstruction.progress as any).mobileApp || 'Mobile App',
    progress: 40,
    color: 'bg-purple-500',
  },
  {
    name: (t.underConstruction.progress as any).betaTesting || 'Beta Testing',
    progress: 25,
    color: 'bg-orange-500',
  },
  {
    name: t.underConstruction.progress.launch,
    progress: 10,
    color: 'bg-red-500',
  },
];

// Enhanced structured data for better SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: t.underConstruction.title,
  description: t.underConstruction.description,
  mainEntity: {
    '@type': 'SoftwareApplication',
    name: 'EuroTCG',
    applicationCategory: 'CollectionApplication',
    applicationSubCategory: 'Trading Card Game Management',
    operatingSystem: ['iOS', 'Android', 'Web'],
    description: t.underConstruction.description,
    offers: {
      '@type': 'Offer',
      price: '0',
      priceCurrency: 'EUR',
      availability: 'InStock',
    },
    author: {
      '@type': 'Organization',
      name: 'EuroTCG Team',
    },
    featureList: coreFeatures.map(f => f.title),
    audience: {
      '@type': 'Audience',
      audienceType: 'TCG Collectors and Traders',
    },
  },
};
---

<BaseLayout
  title={t.underConstruction.title}
  description={t.underConstruction.description}
  locale={locale}
  structuredData={structuredData}
  keywords={keywords}
